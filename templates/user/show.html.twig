{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.name }}, here is your TODO list</h1>

    <table class="table">
        <tbody>
        <tr>
                <th>Name</th>
                <th>Creation date</th>
                <th>Status</th>
        </tr>
        {% for task in user.tasks %}
            <tr>
                <td>{{ task.name }}</td>
                <td>{{ task.creationDateString }}</td>
                <td>{{ task.status }}</td>
                <td><a href="{{ path('app_task_edit', {'id': task.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_task_new') }}">Create a new task</a>

{% endblock %}
